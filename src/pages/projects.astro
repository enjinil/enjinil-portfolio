---
import Layout from "../layouts/Layout.astro";
const allProjects = await Astro.glob("./projects/*.md");
---

<Layout title="/projects">
  <div class="prompt">cd /projects</div>
  <div>
    <h2>Projects</h2>
    <div class="section-content">
      <ul class="posts">
        {
          allProjects.map((post) => (
            <li class="post-item">
              <div class="post-item-meta">
                <a class="post-item-title" href={post.url}>
                  {post.frontmatter.title}
                </a>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</Layout>

<style>
  .posts {
    list-style: none;
  }

  .post-item {
    display: flex;
    align-items: top;
    justify-content: space-between;
    padding: 0;
    margin: 0 0 var(--space-2) 0;

  }
  .post-item-title {
    margin-right: var(--space-4);
    margin-bottom: var(--space-1);
  }

  .post-item-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }

  .post-item-date {
    white-space: nowrap;
    margin-bottom: var(--space-1);
  }

  .post-item-tags {
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    margin-bottom: var(--space-1);

  }
  .post-item .tag {
    margin-right: var(--space-4);
  }
</style>
